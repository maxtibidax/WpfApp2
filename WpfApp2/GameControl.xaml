<UserControl x:Class="WpfApp2.GameControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Focusable="True">
    <Grid>
        <!-- Игровое поле -->
        <Canvas Name="GameCanvas" Width="400" Height="400" Background="Beige" Margin="10"/>
        <!-- Кнопка возврата в меню -->
        <Button Content="Вернуться в меню" Click="ReturnToMenu_Click" 
                HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                Focusable="False"/>
    </Grid>
</UserControl>